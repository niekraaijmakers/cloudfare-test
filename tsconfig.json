{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "node16",
		"target": "es2022",
		"types": ["@cloudflare/workers-types", "node"],
		"moduleResolution": "node",
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"]
}
